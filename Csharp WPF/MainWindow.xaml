<Window x:Class="Csharp_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="529">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="value1" HorizontalAlignment="Left" Height="49" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" />
        <TextBox x:Name="value2" Height="49" Margin="0,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Grid.Column="1"/>
        <ComboBox x:Name="ops" Margin="199,83,198,0" VerticalAlignment="Top" Grid.ColumnSpan="2" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Multiply</ComboBoxItem>
            <ComboBoxItem>Divide</ComboBoxItem>
        </ComboBox>
        <Label x:Name="results" Content="" HorizontalAlignment="Left" Margin="199,171,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="124"/>

    </Grid>
</Window>
